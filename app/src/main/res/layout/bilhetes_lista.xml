<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtNumbpe"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="NÃºmero"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/txtMoeda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" R$ "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/txtValorbpe"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:inputType=""
                android:text="0.00"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:inputType=""
                android:text="Status"
                android:textSize="16sp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Viagem"
            android:id="@+id/txtVia" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtOri"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:text="Origem"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/txtDes"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:text="Destino"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnImprimir"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnCopiar"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@+id/btnCopiar"
            android:layout_toLeftOf="@+id/btnCopiar"
            android:background="@android:color/transparent"
            android:text="Imprimir"
            android:textColor="#276bea" />

        <Button
            android:id="@+id/btnCopiar"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp"
            android:layout_toStartOf="@+id/btnCancelar"
            android:layout_toLeftOf="@+id/btnCancelar"
            android:background="@android:color/transparent"
            android:text="Copiar"
            android:textColor="#276bea" />

        <Button
            android:id="@+id/btnCancelar"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="101dp"
            android:layout_marginRight="101dp"
            android:background="@android:color/transparent"
            android:text="Cancelar"
            android:textColor="#ea2744" />

        <Button
            android:id="@+id/btnExcluir"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="55dp"
            android:layout_marginRight="55dp"
            android:background="@android:color/transparent"
            android:text="[X]"
            android:textColor="#ea2744" />


    </RelativeLayout>


</LinearLayout>


